{
  "name": "starkware-controller",
  "description": "Starkware JSON-RPC Controller Library",
  "version": "1.7.1",
  "author": "Pedro Gomes <github.com/pedrouid>",
  "license": "Apache-2.0",
  "keywords": [
    "stark",
    "starkware",
    "crypto",
    "elliptic",
    "curve",
    "cryptography"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "unpkg": "dist/umd/index.min.js",
  "homepage": "https://github.com/pedrouid/starkware-controller",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedrouid/starkware-controller.git"
  },
  "bugs": {
    "url": "https://github.com/pedrouid/starkware-controller/issues"
  },
  "scripts": {
    "start": "tsdx watch",
    "clean": "rm -rf dist",
    "build:cjs": "./node_modules/.bin/tsc -p tsconfig.cjs.json",
    "build:umd": "webpack",
    "build": "yarn clean && yarn build:cjs && yarn build:umd",
    "test": "tsdx test ./test",
    "lint": "tsdx lint src test",
    "prepare": "yarn lint && yarn build && yarn test"
  },
  "dependencies": {
    "ethers": "^5.0.5",
    "starkware-crypto": "^1.9.1",
    "starkware-types": "1.2.0"
  },
  "devDependencies": {
    "@types/jest": "25.1.1",
    "@types/node": "13.7.0",
    "husky": "4.2.5",
    "tsdx": "0.13.2",
    "tslib": "1.10.0",
    "typescript": "3.7.5",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
